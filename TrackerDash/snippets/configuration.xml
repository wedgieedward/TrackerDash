<div class="container">
    <div class="row clearfix">
        <div class="col-md-3 column">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Settings
                    </h3>
                </div>
                <div class="panel-body">
                    <a href='#'><span class="glyphicon glyphicon-cog"></span> Database Settings</a>
                </div>
                <div class="panel-body">
                    <a href='#'><span class="glyphicon glyphicon-cog"></span> Dashboard Settings</a>
                </div>
                <div class="panel-body">
                    <a href='#'><span class="glyphicon glyphicon-cog"></span> API Settings</a>
                </div>
            </div>
        </div>
        <div class="col-md-5 column">
            <h2>
                Database Settings
            </h2>
            <h4>
                Configure TrackerDash to a running Database
            </h4>
            <br/>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="inputURL" class="col-sm-2 control-label">URL</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="inputURL" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputUsername" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="inputUsername" />
                    </div>
                </div>

                <div class="form-group">
                     <label for="inputPassword" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="btn-group btn-group-sm col-sm-offset-2 col-sm-10">
                         <button class="btn btn-default" type="button">SQLLite</button>
                         <button class="btn btn-default" type="button">MongoDB</button>
                         <button class="btn btn-default disabled" type="button">EdDb</button>
                         <button class="btn btn-default disabled" type="button">AnotherDB</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                         <button type="submit" class="btn btn-default">Save Settings</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
