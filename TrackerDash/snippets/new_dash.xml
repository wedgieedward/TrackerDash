<div xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <div class="container">
        <form class="form-horizontal" role="form" id="submit_form">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label required">Dashboard Name *</label>
                <div class="col-sm-10">
                    <input class="form-control" id="name" name="name"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                     <input type="submit" value="Create Dashboard" class="btn btn-default"/>
                </div>
            </div>
        </form>
    </div>
    <script>
            $('#submit_form').submit(function(e){
                console.log("hello andy");
                console.log( $("#submit_form input#name").val() );
                e.preventDefault();
                $.ajax({
                    url: "../api/",
                    type: "POST",
                    data: {'name': $("#submit_form input#name").val()},
                    success: function(data){
                        alert("Operation Successful")
                    }
                });
            });
    </script>
</div>
